generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum orderStatus {
  Pending
  Approved
  Rejected
  Completed
  Shared
}

enum availabilityType {
  Free
  Exchange
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  password  String
  avatar    String?
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id               Int              @id @default(autoincrement())
  title            String
  author           String
  genre            String
  ageGroup         String
  coverImage       String
  availabilityType availabilityType
  status           String
  ownerId          Int
  owner            User             @relation(fields: [ownerId], references: [id])
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
}

model Orders {
  id            Int              @id @default(autoincrement())
  requesterId   Int
  ownerId       Int
  requestBookId Int
  type          availabilityType
  offeredBookId Int?
  orderStatus   orderStatus
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}
